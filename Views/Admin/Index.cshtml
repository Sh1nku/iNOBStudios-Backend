
@{
    ViewData["Title"] = "Admin";
}

@section Head {
    <script src="~/js/Admin/Index.js" asp-append-version="true"></script>
}

<script type="text/javascript">
        var model = JSON.parse('@Json.Serialize(@Model)');
</script>

<div id="app">
    <template v-if="posts">
        <div class="row">
            <div class="col-sm">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Version</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="post in posts">
                            <th>{{post.date}}</th>
                            <th>
                                <ul v-if="'postVersions' in post">
                                    <li v-for="version in post.postVersions">{{version.title}}</li>
                                </ul>
                            </th>
                            <th>{{post.versions}}</th>
                        </tr>
                        <tr>
                            <th colspan="2"><button class="btn btn-primary" style="float:right">Create Post</button></th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </template>
</div>
